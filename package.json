{
  "name": "@solid-soda/config",
  "version": "2.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn tsc",
    "prepare": "yarn build",
    "test": "yarn jest",
    "types": "yarn tsc --noEmit",
    "pretty": "yarn prettier --write .",
    "commit": "yarn git-cz",
    "lint:code": "yarn eslint \"./**/*.{ts,tsx}\"",
    "release": "yarn standard-version"
  },
  "dependencies": {
    "change-case": "^3.1.0",
    "dotenv": "^6.2.0",
    "nanoption": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "latest",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-unicorn": "^18.0.1",
    "fast-check": "^2.16.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "rimraf": "^2.6.2",
    "simple-git-hooks": "^2.4.1",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "yarn prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint -e"
  }
}
